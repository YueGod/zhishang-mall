<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.yuegod.zhishang.service.user.dao.TopUserMapper">
    <resultMap id="BaseResultMap" type="io.github.yuegod.zhishang.service.user.domain.entity.TopUser">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="nick_name" jdbcType="VARCHAR" property="nickName"/>
        <result column="sex" jdbcType="TINYINT" property="sex"/>
        <result column="birth_day" jdbcType="TIMESTAMP" property="birthDay"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="profile_photo" jdbcType="VARCHAR" property="profilePhoto"/>
        <result column="total_amount" jdbcType="DECIMAL" property="totalAmount"/>
        <result column="score" jdbcType="INTEGER" property="score"/>
        <result column="last_login_time" jdbcType="TIMESTAMP" property="lastLoginTime"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
    </resultMap>
    <select id="findByUserId" resultType="io.github.yuegod.zhishang.service.user.domain.entity.TopUser">
        select id,
               nick_name,
               sex,
               birth_day,
               email,
               phone,
               profile_photo,
               total_amount,
               score,
               last_login_time,
               user_id
        from top_user where user_id = #{userId};
    </select>
</mapper>